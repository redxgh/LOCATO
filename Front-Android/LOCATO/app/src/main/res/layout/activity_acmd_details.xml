<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:alpha="0.7"/>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
       app:layout_collapseMode="pin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_above="@id/card_view"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp">

        <ImageView
            android:layout_width="59dp"
            android:layout_height="42dp"
            android:src="@drawable/baseline_add_home_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Property Details "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp"
        android:id="@+id/card_view"
        >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="615dp"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:text="Property Details"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Type"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Select Type"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopStart="15dp"

                >

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="none"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Location"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Select City"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopStart="15dp"

                >

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="none"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <Button
                android:id="@+id/setlocationBtn"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:enabled="false"
                android:text="Set location" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Details"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="355dp"
                android:layout_height="51dp">

                <EditText
                    android:id="@+id/accRooms"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20px"
                    android:background="@drawable/edit_text_background"
                    android:drawableEnd="@drawable/baseline_bed_24"
                    android:hint="Rooms"
                    android:inputType="number"
                    android:paddingStart="8dp"
                    android:paddingEnd="5dp" />

                <EditText
                    android:id="@+id/accBath"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableEnd="@drawable/baseline_bathtub_24"
                    android:hint="Bathroom"
                    android:inputType="number"
                    android:paddingStart="8dp"
                    android:paddingEnd="5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <EditText
                android:id="@+id/accSur"
                android:layout_width="353dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_background"
                android:drawableEnd="@drawable/baseline_home_24"
                android:hint="Surface"
                android:inputType="numberDecimal"
                android:paddingStart="8dp"
                android:paddingEnd="5dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Images"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>

            <Button
                android:id="@+id/uploadImagesBtn"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/baseline_image_24"
                android:text="Upload Images"
                android:onClick="onUploadButtonClick"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/disabled_color"
                android:text="Next"
                app:cornerRadius="32dp"
                android:enabled="false"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </LinearLayout>

    </ScrollView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>











